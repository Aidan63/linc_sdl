<xml>
    <set name='NATIVE_TOOLKIT_PATH' value='${SNOWKIT_SDL_LIB_PATH}'/>
    <files id='haxe'>
        <compilerflag value='-DSNOWKIT_SDL'/>
        <compilerflag value='-I${SNOWKIT_SDL_LIB_PATH}/sdl/include/'/>
        <compilerflag value='-I${SNOWKIT_SDL_LIB_PATH}/sdl/include/configs/default/'    unless='windows || mac || linux'/>
        <compilerflag value='-I${SNOWKIT_SDL_LIB_PATH}/sdl/include/configs/linux/'      if='linux'/>
        <compilerflag value='-I${SNOWKIT_SDL_LIB_PATH}/sdl/include/configs/windows/'    if='windows'/>
        <compilerflag value='-I${SNOWKIT_SDL_LIB_PATH}/sdl/include/configs/mac/'        if='mac'/>
    </files>
    <target id="haxe">
        <lib name="${SNOWKIT_SDL_LIB_PATH}/sdl/lib/${BINDIR}/libsdl.a"/>

        <section if="mac">
            <vflag name="-l" value="iconv"/>
            <vflag name="-framework" value="Carbon" />
            <vflag name="-framework" value="Cocoa" />
            <vflag name="-framework" value="Foundation" />
            <vflag name="-framework" value="CoreVideo" />
            <vflag name="-framework" value="OpenGL" />
            <vflag name="-framework" value="ForceFeedback" />
            <vflag name="-framework" value="IOKit" />
            <vflag name="-framework" value="CoreAudio" />
            <vflag name="-framework" value="AudioUnit" />
        </section>

    </target>
</xml>